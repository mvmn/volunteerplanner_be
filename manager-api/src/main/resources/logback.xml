<?xml version="1.0" encoding="UTF-8" ?>
<configuration status="info">

	<appender name="TEXT-CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5p [%t] %c{1}:%L - %m%n</pattern>
		</encoder>
	</appender>

	<appender name="JSON-CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder class="net.logstash.logback.encoder.LogstashEncoder" />
	</appender>

	<logger name="com.volunteer.api.audit" level="info" additivity="false">
		<appender-ref ref="JSON-CONSOLE" />
	</logger>

	<root level="info">
		<appender-ref ref="TEXT-CONSOLE" />
	</root>
</configuration>